<h1>Edit</h1>
<div class="ui segment">
  <%= form_with scope: :movie, url: admin_movie_path(@movie.id), method: :put do
  |form| %>
  <div>
    <%= form.label :name, "映画タイトル" %> <%= form.text_field :name, value:
    @movie.name %>
  </div>

  <div>
    <%= form.label :year, "公開年" %> <%= form.number_field :year, min: 1000,
    value: @movie.year %>
  </div>

  <div>
    <%= form.label :is_showing, "上映中か" %> <%= form.check_box :is_showing,
    value: @movie.is_showing %>
  </div>

  <div>
    <%= form.label :description, "概要" %> <%= form.text_area :description,
    value: @movie.description %>
  </div>

  <div>
    <%= form.label :image_url, "画像URL" %> <%= form.text_field :image_url,
    value: @movie.image_url %>
  </div>

  <%= form.submit "登録する" %> <% end %>
</div>
